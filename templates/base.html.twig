<!DOCTYPE html>
<html lang="fr-FR">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <meta name="description" content="| Telegame | &bull; Tirage aux sorts &bull; Participez aux tirages aux sorts exceptionnelle, acheter votre ticket dès maintenant." />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="canonical" href="{{ app.request.getUri() }}">
    <meta property="og:site_name" content="Telegame &bull; Tirage aux sorts &bull; Participez aux tirages aux sorts exceptionnelle, acheter votre ticket dès maintenant.">
    <meta property="og:title" content="Telegame - Tirage aux sorts">
    <meta property="og:image" content="">
    <meta property="og:description" content="Atilla BURSA &bull; Développeur full-stack &bull;  PHP, Symfony, Ruby, Rails, VueJs. Une forte expérience dans le domaine du développement.">
    <meta property="og:url" content="{{ app.request.getUri() }}">
{#
    <meta name="robots" content="{% block isFollow %}index, follow, max-snippet:-1, max-images-preview:large, max-video-preview:-1{% endblock %}" />
#}
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('vue') }}
        {% if 'admin_' in app.request.attributes.get('_route') %}
            {{ encore_entry_link_tags('admin') }}
            {% if 'admin_' in app.request.attributes.get('_route') %}
                <link href="https://cdn.datatables.net/1.10.22/css/dataTables.uikit.min.css" rel="stylesheet" />
            {% endif %}
        {% endif %}
    {% endblock %}
</head>
<body {% if 'admin_' in app.request.attributes.get('_route') %} class="ab-admin"{% endif %}>
{% if 'admin_' in app.request.attributes.get('_route') %}
    <div class="ab-admin-burger ab-pt-20 ab-pr-20 ab-pl-20 uk-visible@s uk-hidden@l">
        <a id="burgerAdmin" href="#" uk-icon="icon: menu;ratio:1.9"></a>
    </div>
{% endif %}
{% if 'admin_' in app.request.attributes.get('_route') %}
    <div class="ab-sidebar">
        {% include 'admin/layout/navbar.html.twig' %}
    </div>
<main id="main">

    {% endif %}
    {% include 'layout/messages.html.twig' %}
    {% if 'front_' in app.request.attributes.get('_route') %}
        {% include 'layout/_header.html.twig' %}
    {% endif %}
    <div>
        {% block body %}
        {% endblock %}
        <div id="app"></div>
    </div>
</main>
<footer>
    {% if 'front_' in app.request.attributes.get('_route') %}
        {% include 'layout/_footer.html.twig' %}
    {% endif %}
</footer>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% if 'front_' in app.request.attributes.get('_route') %}
        {{ encore_entry_script_tags('vue') }}
    {% endif %}
    {% if app.user and "ROLE_ADMIN" in app.user.roles %}
        {{ encore_entry_script_tags('admin') }}
        {% if 'admin_' in app.request.attributes.get('_route') %}
            <script src="https://code.jquery.com/jquery-3.5.1.js" ></script>
            <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js" ></script>
            <script src="https://cdn.datatables.net/responsive/2.2.6/js/dataTables.responsive.min.js" ></script>
            <script src="https://cdn.datatables.net/buttons/1.6.4/js/dataTables.buttons.min.js" ></script>
            <script src="https://cdn.datatables.net/select/1.3.1/js/dataTables.select.min.js" ></script>
            <script src="https://cdn.datatables.net/1.10.22/js/dataTables.uikit.min.js" ></script>
            <script>
                // Datatables
                $('#crud').DataTable( {
                    responsive: true,
                    language: {
                        search: "_INPUT_",
                        searchPlaceholder: "Search..."
                    }
                } );
            </script>
        {% endif %}
    {% endif %}
{% endblock %}
</body>
</html>
